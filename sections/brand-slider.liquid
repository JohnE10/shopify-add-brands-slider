{% schema %}
{
  "name": "Brand Slider",
  "settings": [
    {
      "type": "image_picker",
      "id": "brand",
      "label": "Brand"
    }
  ],
  "presets": [
    {
      "name": "Brand Slider",
      "category": "Custom"
    }
  ],
  "blocks": [
    {
      "name": "Brand Slider",
      "type": "image_picker",
      "settings": [
        {
          "type": "image_picker",
          "id": "brand",
          "label": "Brand"
        }
      ]
    }
  ]
}
{% endschema %}

<link rel="stylesheet" type="text/css" href="{{ 'brand-slider.css' | asset_url }}">
<div class="brand-slider">
  <div class="brand-slider-container">
    <div class="brand-slide-wrapper">
      {% for i in (1..5) %}
        {% assign brand_id = 'brand' | append: i %}
        {% assign brand = section.settings[brand_id] %}
        {% if brand != blank %}
          <div class="brand-slide">
            <img
              src="{{ brand | image_url }}"
              alt="Brand {{ i }}"
              width="{{ section.settings.image_width }}"
              height="{{ section.settings.image_height }}"
            >
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  <button class="prev-btn">Prev</button>
  <button class="next-btn">Next</button>
</div>
