{% schema %}
{
  "name": "Brand Slider",
  "settings": [
    {
      "type": "image_picker",
      "id": "brand1",
      "label": "Brand 1"
    },
    {
      "type": "image_picker",
      "id": "brand2",
      "label": "Brand 2"
    },
    {
      "type": "image_picker",
      "id": "brand3",
      "label": "Brand 3"
    },
    {
      "type": "image_picker",
      "id": "brand4",
      "label": "Brand 4"
    },
    {
      "type": "image_picker",
      "id": "brand5",
      "label": "Brand 5"
    },
    {
      "type": "image_picker",
      "id": "brand6",
      "label": "Brand 6"
    },
    {
      "type": "image_picker",
      "id": "brand7",
      "label": "Brand 7"
    },
    {
      "type": "image_picker",
      "id": "brand8",
      "label": "Brand 8"
    },
    {
      "type": "image_picker",
      "id": "brand9",
      "label": "Brand 9"
    },
    {
      "type": "image_picker",
      "id": "brand10",
      "label": "Brand 10"
    },
    {
      "type": "text",
      "id": "image_width",
      "label": "Image Width",
      "default": "200"
    },
    {
      "type": "text",
      "id": "image_height",
      "label": "Image Height",
      "default": "200"
    }
  ],
  "presets": [
    {
      "name": "Brand Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<link rel="stylesheet" type="text/css" href="{{ 'brand-slider.css' | asset_url }}">
<div class="brand-slider">
  <div class="brand-slider-container">
    <div class="brand-slide-wrapper">
      {% for i in (1..5) %}
        {% assign brand_id = 'brand' | append: i %}
        {% assign brand = section.settings[brand_id] %}
        {% if brand != blank %}
          <div class="brand-slide">
            <img
              src="{{ brand | image_url }}"
              alt="Brand {{ i }}"
              width="{{ section.settings.image_width }}"
              height="{{ section.settings.image_height }}"
            >
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  <button class="prev-btn">Prev</button>
  <button class="next-btn">Next</button>
</div>
